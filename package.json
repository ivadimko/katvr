  "lint-staged": {
    "linters": {
      "*.{js,ts,tsx}": [
        "eslint --fix",
        "git add"
      ],
      "*.{ts,tsx}": [
        "stylelint",
        "git add"
      ]
    },
    "ignore": [
      "**/.next/**/*"
